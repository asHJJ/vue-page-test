@import "reset.css"
@import "mixins.styl"
body
   background #f5f5f5
#app
  background #f5f5f5
  #content
    width 100%
    height 100%
    background #f5f5f5
    section

      width 100%
      display none
      &.on
        display block
      .msite_header
        width 100%
        height 45px
        background #02a774
        z-index 20
        position fixed
        left 0
        top 0
        .header_search
          position absolute
          left 15px
          top 50%
          transform translateY(-50%);
          width: 10%;
          height: 50%;
          color #fff
          i
           font-size 25px
           margin 5px 7px
        .header_title
          position: absolute;
          top 50%
          left 50%
          transform translate(-50%, -50%)
          width 50%
          color #fff
          text-align center
          margin-left -5px
          span:first-child
            font-size 20px;
            display: block;
        .login
          position absolute
          top 50%
          //background pink
          color #ffffff
          text-align center
          font-size 14px
          transform translateY(-50%)
          right 15px
          span
            display block

      .swiper-container
        background #fff
        margin-top 45px
        width 100%
        //background pink
        .swiper-wrapper
          height 200px
        img
          width 100%
          height 200px
        .swiper-pagination-bullet-active
          background #02a774
        .swiper-slide
          height 100%
          clearFix()
        li
          float left
          width 25%
          display flex
          flex-direction column
          align-items center
          img
            width 50%
            height 50%
            margin 10px 0
          span
            font-size 14px
      .near_shop
        background #fff
        width 100%
        height 500px
        margin-top 10px
        position relative
        .shop_header
          width 100%
          position absolute
          top 8px
          left 4px
         .shop_content
           position absolute
           top 50%;
           left 50%;
           transform translate(-50%,-50%)
           text-align: center
           width 100%
           height 420px
           .shop_row
             bottom-border-1px(#eee)
             width 100%
             height 105px
             //background pink
             a
               box-sizing border-box
               padding 15px 8px
               width 100%
               height 100%
               clearFix()
               display block
               .shop_left
                 box-sizing border-box
                 float left
                 width 23%
                 height 75px
                 padding-right 10px
                 position relative
                 img
                   width 100%
                   height 100%
               .shop_right

                   width 77%
                   float right
                   height 75px
                   .right_one
                      width 100%
                      clearFix()
                      h4
                         color rgb(51, 51, 51)
                         float left
                         &:before
                           content '品牌'
                           display inline-block
                           font-size 11px
                           background-color  rgb(255, 217, 48)
                           margin-right 5px;
                           padding 2px
                           border-radius 2px;
                           line-height 11px
                           color black
                      span
                         float right
                         margin-top 3px
                         font-size 11px
                         color #999
                   .right_two
                        width 100%
                        clearFix()
                        margin-top 18px
                        margin-bottom 8px
                        //background pink
                        height 15px

                     .stars
                          float left

                          .star
                                float left
                                width 12px
                                height 12px
                                background-size 12px 12px
                                display inline-block
                                &.on
                                   bg-image("../imgs/stars/star_on")
                                &.half
                                   bg-image("../imgs/stars/star_half")
                                &.off
                                   bg-image("../imgs/stars/star_off")
                          #rating
                                color #ff6000
                                float left
                                font-size 10px
                                margin-left: 4px
                                text-align center
                                height 15px
                                line-height 15px
                          .month
                                   float left
                                   font-size 10px
                                   margin-left 6px
                                   text-align center
                                   height 15px
                                   line-height 15px
                      .method
                        float right
                        color #fff
                        margin-right: -10px
                        height 13px
                        font-size 4px
                        position relative
                        span:first-child
                            background-color  #02a774
                            border 1px solid #02a774
                            display inline-block
                            border-radius 2px
                            transform: scale(0.7)
                            margin-right 2px


                         span:last-child
                                margin-right 8px
                                display inline-block
                                border 1px solid #02a774
                                color #02a774
                                border-radius 2px
                                transform: scale(0.7)
                   .right_three
                           //background pink
                           width 100%
                           color #666
                           clearFix()
                           transform-origin: 0;
                           transform: scale(0.9)
                           font-size 10px
                     .o
                        float left
                        font-size: 100%;
                        font-weight: normal
                        margin-right 3px
                     .n
                           color #ccc
                           float left
                           margin-right 3px
                      .e
                           float left
       .search_title
            width 100%
            height 45px
            background #02a774
            z-index 20
            position fixed
            left 0
            top 0
         .search_title_text
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 30%;
            color: #fff;
            font-size: 22px;
            text-align: center
          .search_form
             margin-top 45px
             position absolute
             left 0
             top 0
             background #fff
             width 100%
             height 60px
             form
                margin-top: 45px;
                background-color: #fff;
                clearFix()
                input
                    float left
                    -web-kit-appearance:none;
                    -moz-appearance: none;
                    background #f5f5f5
                    width 74%
                    height 35px
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                    margin-left -27px
                    margin-right 5px
                .tijiao
                  -web-kit-appearance:none;
                  -moz-appearance: none;
                  //background pink
                  float: right;
                  width: 18%;
                  border: 4px solid #02a774;
                  font-size: 16px;
                  color: #fff;
                  background-color: #02a774
                  position: absolute;
                  top: 50%;
                  left: 90%;
                  transform: translate(-50%, -50%);
                  border-radius 2px
       .order
            width 100%
            height 100%

         .order_title
              width 100%
              height 45px
              background #02a774
              z-index 20
              position fixed
              left 0
              top 0
              span
                position absolute;
                top 50%;
                left 50%;
                transform translate(-50%, -50%);
                width 30%;
                color #fff;
                font-size 22px;
                text-align center
         .order_list
               padding-top: 140px;
               width: 60%;
               margin: 0 auto;
               text-align: center
              //position absolute;
              //top 50%;
              //left 50%;
              //transform translate(-50%, -50%);
              img
                display block
                width 100%
                height 30%
              .order_text
                  padding: 10px 0;
                  font-size: 17px;
                  color: #6a6a6a
                  text-align center
              .order_login
                    //-web-kit-appearance:none;
                    //-moz-appearance: none;
                    width 46%
                    border 1px solid #02a774;
                    font-size 14px;
                    color #fff;
                    background-color #02a774
                    border-radius 2px
                    padding 10px 20px
       .my_title
           width 100%
           height 45px
           background #02a774
           z-index 500
           position fixed
           left 0
           top 0
           span
             position absolute
             top 50%;
             left 50%;
             transform translate(-50%, -50%);
             width 30%;
             color #fff;
             font-size 22px;
             text-align center
       .person
           border-top 1px solid #fff
           margin-top 45.5px
           width 100%
           height 100px
           background #02a774
           position relative
           .person_a
              width 100%
              height 60px
              display block
              background #02a774
              margin 0 auto
              transform translateY(35%)
              clearFix()
              .person_image
                float left
                width 60px
                height 60px
                border-radius 50%
                overflow hidden
                margin-left 8px
                .iconfont
                   background #e4e4e4
                   font-size 62px
              .user_info
                  float left
                  margin-top 8px
                  margin-left 12px
                  color #fff
                  .user_login
                      padding-bottom 8px
                  .shouji
                    display inline-block
                    margin-left -16px
                    height 20px
                    clearFix()
                    .iconfont
                      font-size 30px
                      float left
                    .band_phone
                      float left
                      font-size 14px
                      margin-top 7px
                      margin-left -9px
                  .jiantou1
                    width 12px
                    height 12px
                    position absolute
                    right 15px
                    top 40%
                    .iconfont
                      color #fff
                      font-size 5px





































































  footer
    top-border-1px(#eee)
    background #fff
    position fixed
    bottom 0
    width 100%
    height 50px
    display flex
  .guide-item
    flex 1
    display flex
    flex-direction column
    align-items center
    span:first-child
        .iconfont
          font-size 22px
          display inline-block
          margin 5px 0
    span:last-child
       font-size 14px
    &.active
      color #02a774





