@import "reset.css"
@import "mixins.styl"
#app
  background: #f5f5f5;
  #content
    width 100%
    height 1000px
    section
      width 100%
      display none
      &.on
        display block
      .msite_header
        width 100%
        height 45px
        background #02a774
        z-index 20
        position fixed
        top 0px
        left 0px
      .swiper-container
        margin-top 45px
        width 100%
        background pink
      //background pink
        .swiper-wrapper
          height 200px
        img
          width 100%
          height 200px
        .swiper-pagination-bullet-active
          background #02a774
        .swiper-slide
          height 100%
          clearFix()
        li
          float left
          width 25%
          display flex
          flex-direction column
          align-items center
          img
            width 50%
            height 50%
            margin 10px 0
          span
            font-size 14px








  footer
    top-border-1px(#eee)
    position fixed
    bottom 0
    width 100%
    height 50px
    display flex
  .guide-item
    flex 1
    display flex
    flex-direction column
    align-items center
    span:first-child
      .iconfont
        font-size 22px
        margin 5px 0
    span:last-child

      font-size 14px
    &.active
      color #02a774









